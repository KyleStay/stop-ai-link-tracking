{
    "manifest_version": 3,
    "name": "AI Link Cleaner",
    "version": "1.0",
    "description": "Automatically removes tracking parameters (like UTM) from URLs, especially those shared by AI agents.",
    "permissions": [
        "webNavigation"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        },
        "default_title": "AI Link Cleaner"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}
